@model Pito.Models.Login

@{
    Layout = "_Layout";
}

<div class="login-overlay">
    <div class="login-modal">
        <div class="modal-header">
            <h2>Sign In</h2>
        </div>
        <form asp-action="Index" asp-route-returnurl="@ViewData["ReturnUrl"]" class="login-form">
            <div class="form-group">
                <label for="username">Email/Username</label>
                @Html.EditorFor(user => user.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username/Email" } })
            </div>
            <div class="form-group">
                <label for="username">Password</label>
                @Html.EditorFor(user => user.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
            </div>
            <div class="form-group">
                Anonymous: @Html.CheckBoxFor(user => user.Anonymous)
            </div>
            
            <div class="links">
                <a asp-action="Create" class="link">Register!</a>
                <a asp-action="Forgot" class="link">I've Forgot My Password</a>
            </div>
            
            <div class="form-group">
                <input type="submit" value="SIGN IN" class="submit-button btn btn-success " />
            </div>
            <p class="error-message">
                @ViewBag.ErrorMessage
            </p>
        </form>
    </div>
</div>
