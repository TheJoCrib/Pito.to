@model Pito.Models.Login;

@{
    Layout = "_Layout";
}

<div class="login-overlay">
    <div class="login-modal">
        <div class="modal-header">
            <h2>Sign Up</h2>
            <a asp-action="Index" class="close-button">&times</a>
        </div>
    <div class="createContainer">
            <form asp-action="Create" class="login-form">
            
            <div class="form-group">
                    <label for="email">Email</label>
                    @Html.EditorFor(user => user.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email" } })
            </div>

            
            <div class="form-group">
                    <label for="username">Username</label>
                    @Html.EditorFor(user => user.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username" } })
            </div>

            
            <div class="form-group">
                    <label for="password">Password</label>
                    @Html.EditorFor(user => user.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
            </div>
                
                <div class="form-group">
                    <label for="checkbox">Sign Up Anonymously</label>
                   @Html.CheckBoxFor(user => user.Anonymous)
                    <label class="labelHover">Anonymous in active users list</label>
                </div>
                <div class="form-group">
                    <input type="submit" value="REGISTER" class="btn submit-button btn btn-success " />
                </div>

                <p class="error-message">
                    @ViewBag.ErrorMessage
                </p>
        </form>
    </div>
    </div>
</div>
