<!DOCTYPE html>
<html>
<head>
    <!--Vi använder bootstrap för att integrera olika för-gjorda css-layout in i systemet. -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
</head>
<body>
    <nav class="navContainer navbar">
        <div class="navLayout container-fluid">
            <div class="d-flex justify-content-start">
                <a class="navbar-brand text-white @IsActive("/Home")" title="Go To Home" asp-action="Index" asp-controller="Home">Home</a>
            </div>
            <div class="justify-content-end">
                <a class="navbar-brand text-white @IsActive("/Logout")" title="Logout" asp-action="Index" asp-controller="Home">Logout</a>
            </div>
        </div>
    </nav>

    
    <div class="font-monospace">
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script>
        @functions {
            public string IsActive(string path)
            {
                return Context.Request.Path.StartsWithSegments(new PathString(path), StringComparison.OrdinalIgnoreCase) ? "active" : "";
            }
        }
    </script>

</body>
</html> 